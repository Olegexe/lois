include ../../libs/_libs

mixin gallery-item(title, description, link, isFirst = false, vertical = false)
    if vertical == true
        li.gallery-item.vertical__slider-item
            a.gallery-item__link(href="#" data-url=link)
                +image('video-cover.jpg', 'gallery-item__preview')
                span.gallery-item__content
                    span.gallery-item__text
                        p.gallery-item__description.p100=description
                        h3.gallery-item__title.h200=title
                    span.gallery-item__playbtn
                        span.icon-play
                .gallery-item__overlay
    else
        if isFirst == true
            li.gallery-item
                a.gallery-item__link(href="#" data-url=link)
                    +image('video-cover (1).jpg', 'gallery-item__preview')
                    span.gallery-item__content
                        span.gallery-item__text
                            p.gallery-item__description.p200=description
                            h3.gallery-item__title.h300=title
                        span.gallery-item__playbtn
                            span.icon-play
                    .gallery-item__overlay
        else
            li.gallery-item
                a.gallery-item__link(href="#" data-url=link)
                    +image('video-cover (1).jpg', 'gallery-item__preview')
                    span.gallery-item__content
                        span.gallery-item__text
                            p.gallery-item__description.p100=description
                            h3.gallery-item__title.h200=title
                        span.gallery-item__playbtn
                            span.icon-play
                    .gallery-item__overlay
                
